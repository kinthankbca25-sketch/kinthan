<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Schedule Table</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      background: #f9f9f9;
    }
    table {
      border-collapse: collapse;
      width: 60%;
      margin: 0 auto;
      background: #fff;
      box-shadow: 0 2px 8px rgba(0,0,0,0.10);
    }
    th, td {
      border: 1px solid #ccc;
      padding: 12px 18px;
      text-align: center;
    }
    th {
      background: #99003d;
      color: #fff;
    }
    caption {
      font-size: 1.4em;
      margin-bottom: 14px;
      font-weight: bold;
      color: #222;
    }
  </style>
</head>
<body>
  <table id="scheduleTable">
    <caption>Weekly Schedule</caption>
    <thead>
      <tr>
        <th>Time</th>
        <th>Monday</th>
        <th>Tuesday</th>
        <th>Wednesday</th>
        <th>Thursday</th>
        <th>Friday</th>
      </tr>
    </thead>
    <tbody>
      <!-- Rows will be inserted by JavaScript -->
    </tbody>
  </table>
  <script>
    const schedule = [
      {
        time: "09:00 - 10:00",
        Monday: "Math",
        Tuesday: "Physics",
        Wednesday: "Chemistry",
        Thursday: "Math",
        Friday: "Biology"
      },
      {
        time: "10:15 - 11:15",
        Monday: "English",
        Tuesday: "Biology",
        Wednesday: "Math",
        Thursday: "Chemistry",
        Friday: "Sports"
      },
      {
        time: "11:30 - 12:30",
        Monday: "Physics",
        Tuesday: "English",
        Wednesday: "Biology",
        Thursday: "Physics",
        Friday: "Math"
      }
    ];
    const tbody = document.querySelector('#scheduleTable tbody');

    schedule.forEach(slot => {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td>${slot.time}</td>
        <td>${slot.Monday}</td>
        <td>${slot.Tuesday}</td>
        <td>${slot.Wednesday}</td>
        <td>${slot.Thursday}</td>
        <td>${slot.Friday}</td>
      `;
      tbody.appendChild(row);
    });
  </script>
</body>
</html>
